generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id          String    @id @default(cuid())
  userId      String
  title       String
  platform    String
  content     String?
  status      String
  scheduledAt DateTime?
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])
}
